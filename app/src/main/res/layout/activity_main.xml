<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="695dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488">

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtNum1"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:ems="10"
            android:hint="@string/lblNumber"
            android:inputType="number"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNum2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="@string/lblNumber"
            android:inputType="number"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableRow
            android:layout_width="400dp"
            android:layout_height="101dp"
            android:gravity="center|center_vertical">

            <Button
                android:id="@+id/btnMmas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="M+"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnMmenos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="M-"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="M"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnMS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="MS"
                android:textSize="40sp" />

        </TableRow>

        <TableLayout
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center|center_horizontal|center_vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnSumar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/btn_suma"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnRestar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/btn_resta"
                    android:textSize="40sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnMultiplicar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/btn_multiplicacion"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btnDividir"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/btn_division"
                    android:textSize="40sp" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/lblResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblResultado"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/txtResultado"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="50sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>